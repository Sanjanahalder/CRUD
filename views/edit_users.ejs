<%- include('layout/header') %>
<div class="container">
<div class="row">
<div class="col-lg-6 mx-auto mt-4">
         <!-- Use Bootstrap card class for shadow -->
         <div class="card shadow-lg">
         <div class="card-header bg-success">
                  <h3 class="text-light">Edit User (<%= user.name %>)</h3>
         </div>
         <div class="card-body p-4">
                  <form action="/update/<%= user._id %>" method="POST" id="edit-form" enctype="multipart/form-data">
                  <div class="mb-3">
                           <label for="name">Name</label>
                           <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Enter name" value="<%= user.name %>" required>
                  </div>
                  <div class="mb-3">
                           <label for="email">Email</label>
                           <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Enter email" value="<%= user.email %>" required>
                  </div>
                  <div class="mb-3">
                           <label for="phone">Phone</label>
                           <input type="tel" class="form-control form-control-lg" id="phone" name="phone" placeholder="Enter phone"
                            value="<%= user.phone %>" required>
                  </div>
                  <div class="mb-3">
                           <label for="image" class="form-label">Select Image</label>
                           <input type="file" class="form-control form-control-lg" id="image" name="image">
                           <% if (user.image) { %>
                           <img src="/uploads/<%= user.image %>" width="100" class="img-thumbnail mt-1" alt="User Image">
                           <% } %>
                  </div>
                  <input type="hidden" name="old_image" value="<%= user.image %>"/>
                  <div class="mb-3 d-grid">
                           <input type="submit" class="btn btn-primary btn-lg" name="submit" value="Update User">
                  </div>
                  </form>
         </div>
         </div>
</div>
</div>
</div>
<%- include('layout/footer') %>
